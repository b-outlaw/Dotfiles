[core]
    # global gitignore
    excludesfile = /Users/b_outlaw/.gitignore
[user]
    # information about you that will appear in commit history
	name = b-outlaw
	email = b.outlaw@brandonoutlaw.com
[color]
    # yay, color for everything
    diff = auto
    status = auto
    branch = auto
[apply]
    # ignore trailing whitespace
    whitespace = nowarn
[alias]
    ai = add --interactive
    ap = add --patch
    d = diff
    dc = diff --cached
    b = branch
    ba = branch -a
    ci = commit
    cia = commit --amend
    ciaa = commit --amend -a
    # cif = !sh -c 'git commit -m \"fixup! $(git log -1 --format='\\''%s'\\'' $@)\"' -
    cim = commit -m
    cima = commit -a -m
    co = checkout
    cp = cherry-pick
    ri = rebase --interactive
    rc = rebase --continue
    ra = rebase --abort
    rp = remote prune origin
    sh = show HEAD
    sl = stash list
    sp = stash pop 
    ss = stash save
    st = status -sb
    l = log -n 15 --pretty=format:'%C(yellow)%h %Cred%an %Cgreen%ar%n        %Creset%s%n'
    wc = whatchanged -n 1
[pull]
	rebase = true
